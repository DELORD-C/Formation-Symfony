{% extends 'layout.html.twig' %}

{% block title %}Post Create{% endblock %}

{%  block body %}
    <table class="dump">
        <tr>
            <th>Subject</th>
            <th>Body</th>
            <th>Date</th>
        </tr>
        <tr>
            <td>{{ post.subject }}</td>
            <td>{{ post.body }}</td>
            <td>{{ post.createdAt.format('F d Y') }}</td>
        </tr>
    </table>
    <h2>Comments</h2>
    <table class="table">
        <tr>
            <th>Date</th>
            <th>Content</th>
        </tr>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.createdAt.format('F d Y') }}</td>
                <td>{{ comment.content }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}