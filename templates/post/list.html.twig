{% extends 'base.html.twig' %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th>Comments</th>
                <th>Created At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.title }}</td>
                    <td>{{ post.body }}</td>
                    <td>{{ post.comments|length }}</td>
                    <td>{{ post.createdAt|date('d/m/Y H:i') }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_post_read', {'post': post.id}) }}">Read</a>
                        {% if(is_granted('UPDATE', post)) %}
                            <a class="btn btn-primary" href="{{ path('app_post_update', {'post': post.id}) }}">Update</a>
                        {% endif %}
                        {% if(is_granted('DELETE', post)) %}
                            <a class="btn btn-danger" href="{{ path('app_post_delete', {'post': post.id}) }}">Delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}