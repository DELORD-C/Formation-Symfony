{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}
{% block body %}
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.body }}</td>
                    <td>
                        <a href="{{ path('app_post_read', {'post' : post.id}) }}">Read</a>
                        <a href="{{ path('app_post_update', {'post' : post.id}) }}">Update</a>
                        <a href="{{ path('app_post_delete', {'post' : post.id}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_post_create') }}">Create Post</a>
{% endblock %}
