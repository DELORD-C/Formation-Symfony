{% extends 'layout.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <section class="w-100 p-4 d-flex justify-content-center pb-4">
        <form method="post" style="width: 22rem" class="shadow rounded p-4">
            <h2 class="text-center">Log In</h2>
            <div class="form-floating mb-3">
                <input type="email" id="username" class="form-control" name="_username" placeholder="name@example.com"/>
                <label for="floatingInput">Email</label>
            </div>
            <div class="form-floating">
                <input type="password" id="password" class="form-control" name="_password" placeholder="Password"/>
                <label for="floatingPassword">Password</label>
            </div>
            <div class="row mb-4">
                <div class="col d-flex justify-content-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                        <label class="form-check-label" for="form2Example31"> Remember me </label>
                    </div>
                </div>
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-primary" type="submit">Log In</button>
            </div>
        </form>
    </section>
{% endblock %}