{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('app_review_create') }}">Create</a>
    <table>
        <thead>
            <tr>
                <th>Movie</th>
                <th>Body</th>
                <th>Created</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.movie }}</td>
                <td>{{ review.body }}</td>
                <td>{{ review.createdAt|date }}</td>
                <td>{{ review.rating }}</td>
                <td>
                    <a href="{{ path('app_review_update', {'review' : review.id}) }}">Update</a>
                    <a href="{{ path('app_review_delete', {'review' : review.id}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}