{% extends 'base.html.twig' %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>Movie Title</th>
            <th>Body</th>
            <th>Rating</th>
            <th>Comments</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.movieTitle }}</td>
                <td>{{ review.body }}</td>
                <td>{{ review.rating }} / 10</td>
                <td>{{ review.comments|length }}</td>
                <td>{{ review.createdAt|date('d/m/Y H:i') }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_review_read', {'review': review.id}) }}">Read</a>
                    {% if(is_granted('UPDATE', review)) %}
                        <a class="btn btn-primary" href="{{ path('app_review_update', {'review': review.id}) }}">Update</a>
                    {% endif %}
                    {% if(is_granted('DELETE', review)) %}
                        <a class="btn btn-danger" href="{{ path('app_review_delete', {'review': review.id}) }}">Delete</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}